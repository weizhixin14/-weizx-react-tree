{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */

    /* Basic Options */
    "target": "ES5",
    "module": "ESNext",                                   /* Set the JavaScript language version for emitted JavaScript and include compatible library declarations. */
    "lib": ["ESNext", "DOM"],                             /* Specify a set of bundled library declaration files that describe the target runtime environment. */
    "jsx": "preserve",                                    /* Specify what JSX code is generated. */
    "removeComments": true,

    /* Type-Checking Options */
    "strict": true,                                       /* Enable all strict type-checking options. */                   /* Skip type checking .d.ts files that are included with TypeScript. */
    "noImplicitAny": true,

    /* Module Resolution Options */
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowJs": true,

    /* Advanced Options */
    "forceConsistentCasingInFileNames": true,

    /* Alias Options */
    "baseUrl": ".",
    "paths": {
      "~*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
